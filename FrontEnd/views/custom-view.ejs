<%- include('partials/appheader') %>

<style>
  body {
    margin: 0;
    font-family: 'Georgia', serif;
    background-color: #1c2b38;
    color: #000000;
    line-height: 1.6;
  }

  .report-page {
    max-width: 800px;
    margin: 40px auto;
    padding: 40px 60px;
    background: rgb(255, 255, 255);
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    page-break-after: always;
  }

  .report-page h1 {
    color: black;
    text-align: center;
    font-size: 2rem;
    font-weight: bold;
    margin-bottom: 40px;
    text-transform: uppercase;
    border-bottom: 2px solid #000;
    padding-bottom: 10px;
  }

  .report-section {
    margin-bottom: 35px;
  }

  .report-section h2 {
    font-size: 1.3rem;
    font-weight: bold;
    margin-bottom: 8px;
    color: #333;
    text-decoration: underline;
  }

  .report-section p {
    font-size: 1.05rem;
    text-align: justify;
    margin: 0;
  }

  .metadata {
    margin-bottom: 40px;
  }

  .metadata p {
    margin: 5px 0;
    font-size: 1.05rem;
  }

  @media print {
    .report-page {
      box-shadow: none;
      margin: 0;
      padding: 0;
    }

    body {
      background: none;
    }
  }
</style>

<main class="report-page">
  <h1><%= report.title %></h1>

  <section class="metadata">
    <p><strong>Domain:</strong> <%= report.domain %></p>
    <p><strong>Institution:</strong> <%= report.institution %></p>
    <p><strong>Principal Investigator:</strong> <%= report.pi %></p>
    <p><strong>Start Date:</strong> <%= report.startDate %></p>
    <p><strong>End Date:</strong> <%= report.endDate %></p>
  </section>

  <section class="report-section">
    <h2>Abstract</h2>
    <p><%= report.abstract %></p>
  </section>

  <section class="report-section">
    <h2>Methodology</h2>
    <p><%= report.methodology %></p>
  </section>

  <% if (report.results) { %>
    <section class="report-section">
      <h2>Results</h2>
      <p><%= report.results %></p>
    </section>
  <% } %>

  <% if (report.conclusion) { %>
    <section class="report-section">
      <h2>Conclusion</h2>
      <p><%= report.conclusion %></p>
    </section>
  <% } %>
</main>

<%- include('partials/footer') %>
