<%- include('partials/header') %>
<body class="forgot-password-page">
  <header class="page-header">
      <h1 class="page-title">Password Recovery</h1>
  </header>
  
  <main class="main-content">
      <article class="password-recovery-card">
          <p class="recovery-instructions">Enter your username or email to reset your password</p>
          
          <form id="passwordRecoveryForm" class="recovery-form">
              <fieldset class="form-fieldset">
                  <legend class="fieldset-legend">Account Information</legend>
                  
                  <section class="form-group">
                      <label for="username" class="form-label">Username or Email</label>
                      <input type="text" id="username" name="username" class="form-input" placeholder="Enter your username or email" required>
                  </section>
                  
                  <button type="submit" class="submit-button">Reset Password</button>
              </fieldset>
          </form>
      </article>
  </main>
  
  <footer class="page-footer">
      <p class="footer-text">Remember your password? <a href="/login" class="footer-link">Sign in</a></p>
  </footer>
</body>

<%- include('partials/footer') %>
