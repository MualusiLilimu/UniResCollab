<%- include('partials/header') %>

<body id="login-page">
 



  <!-- Main Content Wrapper -->
  <main class="auth-container">
    <!-- Login Form Section -->
    <section class="auth-box login-box">
      <form action="/login" method="POST" class="auth-form">
        <h2>Sign In</h2>

        <label for="username">Username</label>
        <input type="text" id="username" name="Username" placeholder="Enter username or email">

        <label for="password">Password</label>
        <input type="password" id="password" name="Password" placeholder="Enter password">

        <input type="submit" value="Login" class="auth-button">

        <a href="/forgotPassword" class="forgot-link">Forgot Password?</a>
      </form>
    </section>

    <!-- Call to Sign Up Section -->
    <section class="auth-box alt-box" id="container2">
      <h2>Welcome Back!</h2>
      <p>Don't have an account?</p>
      <form action="/roles" method="GET">
        <button type="submit" class="auth-button alt-button">Sign Up</button>
      </form>
    </section>
  </main>

  <script src="script.js"></script>
</body>

<%- include('partials/footer') %>
