<%- include('partials/appheader') %>

<main class="mainall">
  <section class="container py-4">
    <h2 class="text-center mb-4">All Projects</h2>
    <br><br>

    <% if (projects && projects.length > 0) { %>
      <section class="row g-3">
        <% projects.forEach(project => { %>
          <section class="col-md-6">
            <section class="card p-3 shadow-sm h-100 d-flex flex-column justify-content-between">
              <section>
                <h5><%= project.title %></h5>
                <p class="text-muted mb-2"><%= project.methodology || 'No methodology available.' %></p>
              </section>

              <section style="margin-top: 1rem; display: grid; row-gap: 10px;">
                <a href="/researcher/projects/project-details/<%= project._id %>" class="btn btn-sm btn-outline-primary mb-2">
                  Project Details
                </a>

                <!-- Review Button -->
                <a href="/tools/reviews/<%= project._id %>" class="btn btn-sm btn-outline-secondary mb-2">
                  Review
                </a>

                <!-- Feedback Button -->
                <a href="/tools/review/feedbacks/<%= project._id %>" class="btn btn-sm btn-outline-success">
                  Feedback
                </a>
              </section>
            </section>
          </section>
        <% }) %>
      </section>
    <% } else { %>
      <p class="text-center text-muted">No projects found.</p>
    <% } %>
  </section>
</main>

<%- include('partials/footer') %>
